                                    Margin="10,0,0,0"
                                    FontAttributes="None"
                                    FontFamily="Poppins-Regular, Helvetica"
                                    FontSize="14"
                                    Placeholder="Search"
                                    TextColor="Black"
                                    VerticalOptions="CenterAndExpand" />

                            </StackLayout>

                        </Frame>

                        <Image
                            HeightRequest="50"
                            HorizontalOptions="End"
                            Source="filter.png"
                            WidthRequest="50" />
                    </StackLayout>
                    <StackLayout x:Name="SetFilter" />
