                                            <chart:ColumnSeries
                                                ItemsSource="{Binding Data}"
                                                XBindingPath="Month"
                                                YBindingPath="Target" />
                                        </chart:SfCartesianChart>
                                    </Grid>
                                </StackLayout>
                            </Frame>
