                                </Frame>
                                <Frame Grid.Row="0" Grid.Column="1">
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        Text="Monthly"
                                        TextColor="#2E3234" />
                                </Frame>
                            </Grid>
                        </StackLayout>
                        <Grid Margin="10" ColumnSpacing="10">
