                                <StackLayout Orientation="Vertical">
                                    <StackLayout>
                                        <progressBar:SfCircularProgressBar
                                            BindingContext="{TextCell}"
                                            HeightRequest="100"
                                            HorizontalOptions="Center"
                                            Maximum="100"
                                            Minimum="0"
                                            Progress="80"
                                            ProgressFill="#9DD030"
                                            ProgressThickness="12"
                                            TrackFill="#EFEFEF"
                                            TrackThickness="12"
                                            VerticalOptions="Start"
                                            WidthRequest="100">
